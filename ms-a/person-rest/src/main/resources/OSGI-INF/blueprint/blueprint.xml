<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs">

    <reference id="personService"
               interface="com.llk.api.PersonService"/>

    <reference id="kafkaProducer"
               interface="com.llk.api.PersonEventProducer"/>

    <bean id="personRest" class="com.llk.rest.PersonRest">
        <property name="personService" ref="personService"/>
        <property name="kafkaProducer" ref="kafkaProducer"/>
    </bean>

    <cxf:bus id="personBus">
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

    <bean id="jsonProvider"
          class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>

    <jaxrs:server id="personServer"
                  address="/person">
        <jaxrs:serviceBeans>
            <ref component-id="personRest"/>
        </jaxrs:serviceBeans>

        <jaxrs:providers>
            <ref component-id="jsonProvider"/>
        </jaxrs:providers>
    </jaxrs:server>

</blueprint>
